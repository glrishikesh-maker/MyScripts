local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "RCR LOADER",
   LoadingTitle = "RCR System",
   LoadingSubtitle = "Checking for updates...",
   ConfigurationSaving = {
      Enabled = false
   },
   KeySystem = false,
})

local LoaderTab = Window:CreateTab("Execute", 4483362458) 

local LoadButton = LoaderTab:CreateButton({
   Name = "RCR HUB",
   Callback = function()
       -- This pulls the code from your specific GitHub link
       loadstring(game:HttpGet("https://raw.githubusercontent.com/glrishikesh-maker/MyScripts/refs/heads/main/RCRHUB_MAIN.lua"))()
       
       -- This closes the loader so the actual hub can take over
       Rayfield:Destroy()
   end,
})

Rayfield:Notify({
   Title = "Loader Ready",
   Content = "Click RCR HUB to start",
   Duration = 5,
})
