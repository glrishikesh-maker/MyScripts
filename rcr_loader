getgenv().SecureMode = true -- Helps bypass executor restrictions
local success, Rayfield = pcall(function()
    return loadstring(game:HttpGet('https://raw.githubusercontent.com/SiriusSoftwareLtd/Rayfield/main/source.lua'))()
end)

if not success or not Rayfield then
    warn("RCR FATAL ERROR: Rayfield library could not be reached.")
    print("Error details: ", Rayfield) -- This shows the error in F9 console
    return
end

local Window = Rayfield:CreateWindow({
   Name = "RCR LOADER | gold3en_rishi",
   LoadingTitle = "Forcing Connection...",
   LoadingSubtitle = "RIVALS || RCRHUB",
   ConfigurationSaving = { Enabled = false },
   KeySystem = false,
})

local Tab = Window:CreateTab("Main", 4483362458)

Tab:CreateButton({
   Name = "EXECUTE RCR NOW",
   Callback = function()
       local githubLink = "https://raw.githubusercontent.com/glrishikesh-maker/MyScripts/refs/heads/main/RCRHUB_MAIN.lua"
       local hubSuccess, hubErr = pcall(function()
           loadstring(game:HttpGet(githubLink .. "?t=" .. os.time()))()
       end)

       if hubSuccess then
           Rayfield:Destroy()
       else
           warn("Hub Error: " .. tostring(hubErr))
       end
   end,
})

Tab:CreateButton({
   Name = "CLOSE LOADER",
   Callback = function()
       Rayfield:Destroy()
   end,
})
