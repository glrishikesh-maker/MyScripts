local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "RCR HUB",
   LoadingTitle = "RCR HUB Loading...",
   LoadingSubtitle = "Safe Mode Active",
   ConfigurationSaving = { Enabled = false },
   KeySystem = false,
})

local MainTab = Window:CreateTab("Home", 4483362458) 
local AimTab = Window:CreateTab("Combat", 4483362458)

-- HOME TAB BUTTONS
MainTab:CreateButton({
   Name = "fps booster",
   Callback = function()
       loadstring(game:HttpGet("https://rawscripts.net/raw/Universal-Script-Optiz-FpsBooster-60070"))()
   end,
})

MainTab:CreateButton({
   Name = "stretched res",
   Callback = function()
       loadstring(game:HttpGet("https://rawscripts.net/raw/Universal-Script-Stretched-Resolution-Higher-FOV-48170"))()
   end,
})

-- COMBAT TAB (SAFE AIMBOT)
AimTab:CreateButton({
   Name = "Smooth Aim Assist",
   Callback = function()
       local Players = game:GetService("Players")
       local LocalPlayer = Players.LocalPlayer
       local RunService = game:GetService("RunService")
       local UserInputService = game:GetService("UserInputService")

       local function GetClosest()
           local target = nil
           local dist = math.huge
           for _, v in pairs(Players:GetPlayers()) do
               if v ~= LocalPlayer and v.Character and v.Character:FindFirstChild("Head") then
                   local pos, onScreen = workspace.CurrentCamera:WorldToScreenPoint(v.Character.Head.Position)
                   if onScreen then
                       local mousePos = UserInputService:GetMouseLocation()
                       local magnitude = (Vector2.new(pos.X, pos.Y) - mousePos).Magnitude
                       if magnitude < dist then
                           target = v
                           dist = magnitude
                       end
                   end
               end
           end
           return target
       end

       -- Connection to follow the player
       RunService.RenderStepped:Connect(function()
           if UserInputService:IsMouseButtonPressed(Enum.UserInputType.MouseButton2) then -- Holds Right Click
               local target = GetClosest()
               if target and target.Character then
                   local cam = workspace.CurrentCamera
                   cam.CFrame = CFrame.new(cam.CFrame.Position, target.Character.Head.Position)
               end
           end
       end)

       Rayfield:Notify({Title = "RCR", Content = "Aim Assist Loaded! Hold Right-Click to use.", Duration = 5})
   end,
})

MainTab:CreateButton({
   Name = "Discord",
   Callback = function()
       if (setclipboard) then setclipboard("https://discord.gg/zeCVjkB29y") end
   end,
})



