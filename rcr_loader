local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

Rayfield:Notify({
    Title = "RCR SYSTEM", 
    Content = "Loader by gold3en_rishi", 
    Duration = 4
})

local Window = Rayfield:CreateWindow({
   Name = "RCR LOADER | gold3en_rishi",
   LoadingTitle = "Awaiting Input...",
   LoadingSubtitle = "RIVALS || RCRHUB",
   ConfigurationSaving = { Enabled = false },
   KeySystem = false,
})

local Tab = Window:CreateTab("Main", 4483362458)

Tab:CreateButton({
   Name = "EXECUTE RCR NOW",
   Callback = function()
       local githubLink = "https://raw.githubusercontent.com/glrishikesh-maker/MyScripts/refs/heads/main/RCRHUB_MAIN.lua"
       local success, err = pcall(function()
           loadstring(game:HttpGet(githubLink .. "?t=" .. os.time()))()
       end)

       if success then
           Rayfield:Destroy()
       else
           warn("RCR Loader Error: " .. tostring(err))
       end
   end,
})

Tab:CreateButton({
   Name = "CLOSE LOADER",
   Callback = function()
       Rayfield:Destroy()
   end,
})
