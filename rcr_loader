local Luna = loadstring(game:HttpGet("https://raw.githubusercontent.com/skatbr/Luna/main/Source.lua"))()

local Window = Luna:CreateWindow({
   Name = "RCR LOADER",
   Subtitle = "Auto-Update System",
   LogoID = "4483362458",
   LoadingEnabled = true,
   LoadingTitle = "Checking for Updates",
   LoadingSubtitle = "Fetching GitHub Data..."
})

local Tab = Window:CreateTab({Name = "Execute", Icon = "play"})

Tab:CreateButton({
   Name = "LAUNCH RCR HUB",
   Description = "Loads the main hub from GitHub",
   Callback = function()
       local githubLink = "https://raw.githubusercontent.com/glrishikesh-maker/MyScripts/refs/heads/main/RCRHUB_MAIN.lua"
       local cacheBuster = githubLink .. "?t=" .. os.time()
       
       local success, err = pcall(function()
           loadstring(game:HttpGet(cacheBuster))()
       end)

       if success then
           Window:Destroy()
       else
           Luna:Notification({
               Title = "Fetch Error",
               Content = "Could not reach GitHub. Check your internet.",
               Time = 5
           })
       end
   end
})

Luna:Notification({
   Title = "System Ready",
   Content = "Loader version 3.0 active.",
   Time = 3
})





