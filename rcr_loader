local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/UI-Libs/main/lucid.lua"))()
local Window = Library:CreateWindow("RCR LOADER")

local MainTab = Window:CreateTab("Execute")

MainTab:CreateButton("LAUNCH RCR HUB", function()
    local githubLink = "https://raw.githubusercontent.com/glrishikesh-maker/MyScripts/refs/heads/main/RCRHUB_MAIN.lua"
    local cacheBuster = githubLink .. "?t=" .. os.time()
    
    local success, err = pcall(function()
        loadstring(game:HttpGet(cacheBuster))()
    end)

    if success then
        -- This closes the loader once the hub successfully starts
        game:GetService("CoreGui"):FindFirstChild("Lucid"):Destroy()
    else
        warn("RCR Loader Error: " .. tostring(err))
    end
end)

MainTab:CreateLabel("Version: 4.0 (Lucid)")
