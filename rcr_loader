local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "RCR LOADER",
   LoadingTitle = "RCR System",
   LoadingSubtitle = "Auto-Update Enabled",
   ConfigurationSaving = { Enabled = false },
   KeySystem = false,
})

local LoaderTab = Window:CreateTab("Execute", 4483362458) 

local LoadButton = LoaderTab:CreateButton({
   Name = "RCR HUB",
   Callback = function()
       local githubLink = "https://raw.githubusercontent.com/glrishikesh-maker/MyScripts/refs/heads/main/RCRHUB_MAIN.lua"
       local cacheBuster = githubLink .. "?t=" .. os.time()
       
       local success, err = pcall(function()
           loadstring(game:HttpGet(cacheBuster))()
       end)

       if success then
           Rayfield:Destroy()
       else
           Rayfield:Notify({
               Title = "Update Error",
               Content = "Failed to fetch newest code.",
               Duration = 5
           })
       end
   end,
})

Rayfield:Notify({
   Title = "Loader Ready",
   Content = "Updates are checked instantly.",
   Duration = 5,
})
